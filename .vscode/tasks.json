    "version": "2.0.0",
    "tasks": [
 		{
            "label": "sjasmplus",
            "type": "shell",
            "command": "sjasmplus",
            "args": [
				"--sld=${fileDirname}/${fileBasenameNoExtension}.sld",
                "--fullpath",
            	"${file}"
			],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}